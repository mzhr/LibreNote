<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mzhr.librenote" >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/app_theme" >

        <activity
            android:name="mzhr.librenote.activities.NoteListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.EditNoteActivity"
            android:label="@string/text_note_activity_title" >
        </activity>

        <activity
            android:name="mzhr.librenote.activities.SettingsActivity"
            android:label="@string/settings_activity_title" >
        </activity>

        <activity
            android:name="mzhr.librenote.activities.ChangelogActivity"
            android:label="@string/changelog_activity_title" >
        </activity>
    </application>
    
</manifest>
